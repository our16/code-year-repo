    <div class="progress-indicator" id="progressIndicator"></div>

    <script>
        // æ•°æ®
        const data = {{ data_json | default('{}') }};

        // ========== LoadingçŠ¶æ€ç®¡ç† ==========
        const LoadingManager = {
            overlay: document.getElementById('loadingOverlay'),
            progressText: document.getElementById('loadingProgress'),
            isLoaded: false,

            // æ›´æ–°è¿›åº¦æ–‡æœ¬
            updateProgress(text) {
                if (this.progressText) {
                    this.progressText.textContent = text;
                }
            },

            // éšè—Loading
            hide() {
                if (!this.isLoaded) {
                    this.overlay.classList.add('hidden');
                    this.isLoaded = true;

                    // å®Œå…¨ç§»é™¤DOMä»¥é‡Šæ”¾èµ„æº
                    setTimeout(() => {
                        this.overlay.style.display = 'none';
                    }, 500);
                }
            },

            // æ˜¾ç¤ºé”™è¯¯
            showError(message) {
                this.updateProgress('âŒ ' + message);
                setTimeout(() => {
                    this.hide();
                }, 2000);
            }
        };

        // ========== æ•°æ®éªŒè¯ ==========
        function validateData(data) {
            try {
                if (!data || Object.keys(data).length === 0) {
                    throw new Error('æ•°æ®ä¸ºç©º');
                }

                if (!data.summary) {
                    throw new Error('ç¼ºå°‘summaryæ•°æ®');
                }

                return true;
            } catch (error) {
                console.error('æ•°æ®éªŒè¯å¤±è´¥:', error);
                LoadingManager.showError(error.message);
                return false;
            }
        }

        // ========== åˆå§‹åŒ–æµç¨‹ ==========
        async function initializeApp() {
            try {
                LoadingManager.updateProgress('ğŸ“Š åŠ è½½æ•°æ®...');

                // éªŒè¯æ•°æ®
                if (!validateData(data)) {
                    return;
                }

                LoadingManager.updateProgress('ğŸ¨ åˆå§‹åŒ–ç•Œé¢...');

                // åˆå§‹åŒ–å„ä¸ªæ¨¡å—
                await Promise.all([
                    initLanguages(),
                    initProjects(),
                    initGenerateTime(),
                    createProgressIndicator()
                ]);

                LoadingManager.updateProgress('âœ¨ å‡†å¤‡å°±ç»ª');

                // çŸ­æš‚å»¶è¿Ÿåéšè—Loadingï¼Œè®©ç”¨æˆ·çœ‹åˆ°"å‡†å¤‡å°±ç»ª"
                setTimeout(() => {
                    LoadingManager.hide();
                }, 500);

                // åˆå§‹åŒ–æŒ‡æ ‡åŠ¨ç”»å’Œæ»šåŠ¨ç›‘å¬
                initMetrics();
                const container = document.getElementById('mainContainer');
                container.addEventListener('scroll', handleScroll);
                setTimeout(handleScroll, 100);

            } catch (error) {
                console.error('åˆå§‹åŒ–å¤±è´¥:', error);
                LoadingManager.showError('åˆå§‹åŒ–å¤±è´¥: ' + error.message);
            }
        }

        // æ ¼å¼åŒ–æ•°å­—
        function formatNumber(num) {
            if (num >= 10000) {
                return (num / 10000).toFixed(1) + 'w';
            } else if (num >= 1000) {
                return (num / 1000).toFixed(1) + 'k';
            }
            return num.toString();
        }

        // æ•°å­—åŠ¨ç”»
        function animateNumber(element, target, duration = 1500) {
            const start = 0;
            const startTime = performance.now();

            function update(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);

                // ç¼“åŠ¨å‡½æ•°
                const easeOutQuart = 1 - Math.pow(1 - progress, 4);
                const current = Math.floor(start + (target - start) * easeOutQuart);

                element.textContent = formatNumber(current);

                if (progress < 1) {
                    requestAnimationFrame(update);
                } else {
                    element.textContent = formatNumber(target);
                }
            }

            requestAnimationFrame(update);
        }

        // åˆå§‹åŒ–æŒ‡æ ‡
        function initMetrics() {
            const summary = data.summary || {};

            // åˆ›å»ºIntersectionObserverç”¨äºæ£€æµ‹ç« èŠ‚å¯è§æ€§
            const observerOptions = {
                root: document.getElementById('mainContainer'),
                threshold: 0.5
            };

            const metricObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const chapter = entry.target;

                        // è§¦å‘æŒ‡æ ‡æ•°å­—åŠ¨ç”»
                        if (chapter.dataset.chapter === 'commits') {
                            const element = document.getElementById('total-commits');
                            element.classList.add('animate');
                            animateNumber(element, summary.total_commits || 0);
                        } else if (chapter.dataset.chapter === 'lines') {
                            const element = document.getElementById('net-lines');
                            element.classList.add('animate');
                            animateNumber(element, summary.net_lines || 0);
                        } else if (chapter.dataset.chapter === 'projects') {
                            const element = document.getElementById('project-count');
                            element.classList.add('animate');
                            animateNumber(element, (data.projects || []).length);
                        } else if (chapter.dataset.chapter === 'deletions') {
                            const element = document.getElementById('deletions');
                            element.classList.add('animate');
                            animateNumber(element, summary.total_deletions || 0);
                        }

                        // è§¦å‘è¯­è¨€æ ‡ç­¾åŠ¨ç”»
                        if (chapter.dataset.chapter === 'languages') {
                            const tags = chapter.querySelectorAll('.language-tag');
                            tags.forEach((tag, index) => {
                                setTimeout(() => {
                                    tag.classList.add('animate');
                                }, index * 100);
                            });
                        }

                        // è§¦å‘é¡¹ç›®å¡ç‰‡åŠ¨ç”»
                        if (chapter.dataset.chapter === 'projects-detail') {
                            const cards = chapter.querySelectorAll('.project-card');
                            cards.forEach((card, index) => {
                                setTimeout(() => {
                                    card.classList.add('animate');
                                }, index * 150);
                            });
                        }

                        metricObserver.unobserve(chapter);
                    }
                });
            }, observerOptions);

            // è§‚å¯Ÿæ‰€æœ‰ç« èŠ‚
            document.querySelectorAll('.chapter').forEach(chapter => {
                metricObserver.observe(chapter);
            });
        }

        // åˆå§‹åŒ–è¯­è¨€åˆ—è¡¨
        function initLanguages() {
            const languages = data.languages || {};
            const topLanguages = languages.top_languages || [];

            const container = document.getElementById('language-list');
            container.innerHTML = topLanguages.map(lang => `
                <div class="language-tag">
                    <span>${lang.name}</span>
                    <span class="percentage">${lang.percentage}%</span>
                </div>
            `).join('');
        }

        // åˆå§‹åŒ–é¡¹ç›®åˆ—è¡¨
        function initProjects() {
            const projects = data.projects || [];

            const container = document.getElementById('project-grid');

            if (projects.length === 0) {
                container.innerHTML = '<p style="text-align: center; color: var(--text-secondary);">æš‚æ— æ•°æ®</p>';
                return;
            }

            container.innerHTML = projects.map(project => `
                <div class="project-card">
                    <h4>${project.name}</h4>
                    <div class="stats">
                        <div class="stat">
                            <span>ğŸ“ æäº¤æ¬¡æ•°</span>
                            <span class="value">${project.commits}</span>
                        </div>
                        <div class="stat">
                            <span>â• æ–°å¢ä»£ç </span>
                            <span class="value">${formatNumber(project.additions)}</span>
                        </div>
                        <div class="stat">
                            <span>â– åˆ é™¤ä»£ç </span>
                            <span class="value">${formatNumber(project.deletions)}</span>
                        </div>
                        <div class="stat">
                            <span>ğŸ“Š å‡€å¢ä»£ç </span>
                            <span class="value">${formatNumber(project.net_lines)}</span>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // åˆå§‹åŒ–ç”Ÿæˆæ—¶é—´
        function initGenerateTime() {
            const meta = data.meta || {};
            const generatedAt = meta.generated_at || new Date().toISOString();
            const timeStr = new Date(generatedAt).toLocaleString('zh-CN', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit',
            });
            document.getElementById('generate-time').textContent = timeStr;
        }

        // åˆ›å»ºè¿›åº¦æŒ‡ç¤ºå™¨
        function createProgressIndicator() {
            const chapters = document.querySelectorAll('.chapter');
            const container = document.getElementById('progressIndicator');

            chapters.forEach((chapter, index) => {
                const dot = document.createElement('div');
                dot.className = 'progress-dot';
                dot.innerHTML = `<span class="tooltip">${chapter.dataset.title || `ç¬¬${index + 1}é¡µ`}</span>`;

                dot.addEventListener('click', () => {
                    chapter.scrollIntoView({ behavior: 'smooth' });
                });

                container.appendChild(dot);
            });
        }

        // ç« èŠ‚å¯è§æ€§æ£€æµ‹
        function handleScroll() {
            const container = document.getElementById('mainContainer');
            const chapters = document.querySelectorAll('.chapter');
            const dots = document.querySelectorAll('.progress-dot');
            const containerCenter = container.scrollTop + container.clientHeight / 2;

            chapters.forEach((chapter, index) => {
                const chapterTop = chapter.offsetTop;
                const chapterBottom = chapterTop + chapter.offsetHeight;
                const chapterCenter = (chapterTop + chapterBottom) / 2;

                // æ£€æŸ¥ç« èŠ‚æ˜¯å¦åœ¨è§†å£ä¸­å¿ƒ
                const distance = Math.abs(containerCenter - chapterCenter);
                const isActive = distance < container.clientHeight / 2;

                if (isActive) {
                    chapter.classList.add('active');
                    if (dots[index]) {
                        dots.forEach(d => d.classList.remove('active'));
                        dots[index].classList.add('active');
                    }
                } else {
                    chapter.classList.remove('active');
                }
            });
        }

        // é¡µé¢åŠ è½½å®Œæˆååˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', function() {
            // ä½¿ç”¨æ–°çš„åˆå§‹åŒ–æµç¨‹
            initializeApp();
        });

        // æ”¯æŒé”®ç›˜å¯¼èˆª
        document.addEventListener('keydown', function(e) {
            const container = document.getElementById('mainContainer');
            const scrollAmount = container.clientHeight;

            if (e.key === 'ArrowDown' || e.key === 'PageDown') {
                e.preventDefault();
                container.scrollBy({
                    top: scrollAmount,
                    behavior: 'smooth'
                });
            } else if (e.key === 'ArrowUp' || e.key === 'PageUp') {
                e.preventDefault();
                container.scrollBy({
                    top: -scrollAmount,
                    behavior: 'smooth'
                });
            } else if (e.key === 'Home') {
                e.preventDefault();
                container.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            } else if (e.key === 'End') {
                e.preventDefault();
                container.scrollTo({
                    top: container.scrollHeight,
                    behavior: 'smooth'
                });
            }
        });
    </script>
</body>
</html>
